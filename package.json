{
  "name": "qilin-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "Qilin Web Store & Launcher & Shared Components",
  "repository": "https://github.com/qilin/store-ui.git",
  "author": {
    "name": "Qilin Team",
    "email": "your.email@domain.com",
    "url": "https://your-website.com"
  },
  "scripts": {
    "start:web": "yarn workspace qilin-web-store start",
    "start:electron": "yarn workspace qilin-launcher start",
    "build:web": "yarn workspace qilin-web-store build",
    "build:electron": "yarn workspace qilin-launcher electron-pack",
    "lint": "yarn workspaces run lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./**/*.{ts,tsx}": [
      "yarn lint",
      "git add"
    ]
  },
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.3.1",
    "eslint": "^6.4.0",
    "eslint-plugin-react": "^7.14.3",
    "husky": "^3.0.5",
    "lint-staged": "^9.3.0"
  }
}
